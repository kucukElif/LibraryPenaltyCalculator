@model IEnumerable<Book>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12 mt-2">
>
        <div class="col-6 ">
            <a asp-action="AddBook" asp-controller="Home" class="btn btn-success float-right">Kitap Ekle</a>
        </div>

    </div>
</div>

    <div class="container">
        <div class="row mt-5">

            @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100">
                        <a href="#!"><img class="card-img-top" src="https://via.placeholder.com/700x400" alt="..." /></a>
                        <div class="card-body">
                            <h4 class="card-title"><a href="#!">@item.Name</a></h4>
                            <h5>$24.99</h5>
                            <p class="card-text">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Amet numquam aspernatur!</p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">
                                <a asp-action="Order" asp-controller="Home" asp-route-id="@item.ID" class="btn btn-dark float-right">Kirala</a>
                                <a asp-action="AddPenalty" asp-controller="Home" asp-route-id="@item.ID" class="btn btn-dark float-left">Ceza Ekle</a>

                            </small>
                        </div>
                    </div>
                </div>
            }




        </div>
    </div>


