@model Penalty 
@{
    ViewData["Title"] = "AddPenalty";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">

    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <div class="card card-primary">


                    <form role="form" asp-action="AddPenalty" asp-controller="Home" method="post" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="form-group">
                                <label>Kiralandığı Tarihi</label>
                                <input asp-for="NonPanelty" type="date" class="form-control" placeholder="Kiralandığı Tarihi">
                            </div>
                            <div class="form-group">
                                <label>Başlangıç Tarihi</label>
                                <input asp-for="StartDate" type="date" class="form-control" placeholder="Başlangıç Tarihi">
                            </div>
                            <div class="form-group">
                                <label>Bitiş Tarihi</label>
                                <input asp-for="EndDate" type="date" class="form-control" placeholder="Bitiş Tarihi">
                            </div>
                            <div class="form-group">
                                <label>Ülke</label>
                                <input asp-for="Country" type="text" class="form-control" placeholder="Ülke">
                            </div>
                            <div class="form-group">
                                <label>Günllük Ceza Fiyatı</label>
                                <input asp-for="Price" type="text" class="form-control" placeholder="Günllük Ceza Fiyatı">
                            </div>
                        </div>


                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Ekle</button>
                        </div>
                    </form>
                </div>


            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/plugins/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script>
    $(document).ready(function () {
        bsCustomFileInput.init();
    });
    </script>

}

